{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CaseFrames",
  "type": "object",
  "required": [
    "schema_version",
    "case_id",
    "generated_at_utc",
    "documents_count",
    "total_chunks",
    "total_words",
    "documents"
  ],
  "properties": {
    "schema_version": { "const": "1.0" },
    "case_id": { "type": "string", "minLength": 1 },
    "generated_at_utc": { "type": "string", "minLength": 1 },
    "documents_count": { "type": "integer", "minimum": 0 },
    "total_chunks": { "type": "integer", "minimum": 0 },
    "total_words": { "type": "integer", "minimum": 0 },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "document_id",
          "original_name",
          "mime",
          "sha256",
          "created_at",
          "chunk_count",
          "total_words",
          "sample_quotes"
        ],
        "properties": {
          "document_id": { "type": "string", "minLength": 1 },
          "original_name": { "type": "string" },
          "mime": { "type": "string" },
          "sha256": { "type": "string" },
          "created_at": { "type": "string" },
          "chunk_count": { "type": "integer", "minimum": 0 },
          "total_words": { "type": "integer", "minimum": 0 },
          "sample_quotes": {
            "type": "array",
            "maxItems": 3,
            "items": {
              "type": "object",
              "required": ["chunk_index", "start_offset", "end_offset", "text_preview"],
              "properties": {
                "chunk_index": { "type": "integer", "minimum": 0 },
                "start_offset": { "type": "integer", "minimum": 0 },
                "end_offset": { "type": "integer", "minimum": 0 },
                "text_preview": { "type": "string" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}

